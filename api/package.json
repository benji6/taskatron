{
  "name": "taskatron-api",
  "version": "0.1.0",
  "private": true,
  "license": "UNLICENSED",
  "main": "build",
  "scripts": {
    "build": "rm -rf build && tsc",
    "format": "prettier --write \"src/**/*.ts*\"",
    "format:check": "prettier --list-different \"src/**/*.ts*\"",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "server:watch": "PORT=3001 nodemon .",
    "start": "rm -rf build && run-p tsc:watch server:watch",
    "test": "run-p format:check lint test:types",
    "test:types": "tsc --noEmit",
    "tsc:watch": "tsc -w"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "config": "^1.30.0",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "mailgun-js": "^0.18.0",
    "mongodb": "^3.1.0-beta4",
    "passwordless": "^1.1.2",
    "passwordless-mongostore": "^0.1.4",
    "pino": "^4.16.1"
  },
  "devDependencies": {
    "@types/config": "^0.0.34",
    "@types/cors": "^2.8.4",
    "@types/mailgun-js": "^0.16.0",
    "@types/mongodb": "^3.0.19",
    "@types/pino": "^4.7.1",
    "nodemon": "^1.17.4",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.5",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "^2.8.3"
  }
}
