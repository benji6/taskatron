{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "target": "ES2017"
  },
  "exclude": ["node_modules", "build"]
}
