{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "license": "UNLICENSED",
  "main": "build",
  "scripts": {
    "build": "rm -rf build && tsc",
    "format": "prettier --write \"src/**/*.ts*\" && yarn test:lint --fix",
    "server:watch": "nodemon .",
    "start": "rm -rf build && run-p tsc:watch server:watch",
    "test": "run-p test:*",
    "test:format": "prettier --list-different \"src/**/*.ts*\"",
    "test:lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test:types": "tsc --noEmit",
    "test-data:add": "yarn build && node build/scripts/addTestData",
    "test-data:remove": "yarn build && node build/scripts/removeTestData",
    "tsc:watch": "tsc -w"
  },
  "dependencies": {
    "apollo-server-express": "^2.2.5",
    "aws-sdk": "^2.369.0",
    "axios": "^0.18.0",
    "bcrypt": "^3.0.2",
    "body-parser": "^1.18.3",
    "bs58": "^4.0.1",
    "config": "^2.0.1",
    "cors": "^2.8.5",
    "express": "^4.16.3",
    "graphql": "^14.0.2",
    "io-ts": "^1.4.2",
    "mailgun-js": "^0.20.0",
    "mongodb": "^3.1.10",
    "pino": "^5.9.0",
    "shared": "^0.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/bs58": "^3.0.30",
    "@types/config": "^0.0.34",
    "@types/cors": "^2.8.4",
    "@types/graphql": "^14.0.2",
    "@types/mailgun-js": "^0.16.2",
    "@types/mongodb": "^3.1.15",
    "@types/pino": "^5.20.0",
    "nodemon": "^1.18.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "^3.2.1"
  }
}
