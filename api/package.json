{
  "name": "taskatron-api",
  "version": "0.1.0",
  "private": true,
  "license": "UNLICENSED",
  "main": "build",
  "scripts": {
    "build": "rm -rf build && tsc",
    "format": "prettier --write \"src/**/*.ts*\"",
    "server:watch": "nodemon .",
    "start": "rm -rf build && run-p tsc:watch server:watch",
    "test": "run-p test:*",
    "test:format": "prettier --list-different \"src/**/*.ts*\"",
    "test:lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test:types": "tsc --noEmit",
    "testData:add": "yarn build && node build/scripts/addTestData",
    "testData:remove": "yarn build && node build/scripts/removeTestData",
    "tsc:watch": "tsc -w"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "bs58": "^4.0.1",
    "config": "^2.0.1",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "mailgun-js": "^0.20.0",
    "mongodb": "^3.1.0-beta4",
    "passwordless-mongostore": "^0.1.4",
    "pino": "^5.4.0"
  },
  "devDependencies": {
    "@types/bs58": "^3.0.30",
    "@types/config": "^0.0.34",
    "@types/cors": "^2.8.4",
    "@types/mailgun-js": "^0.16.0",
    "@types/mongodb": "^3.1.3",
    "@types/pino": "^5.20.0",
    "nodemon": "^1.18.3",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "^3.0.1"
  }
}
