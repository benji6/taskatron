{
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2018"],
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "typeRoots": [
      "./src/typings",
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "build",
  ]
}
